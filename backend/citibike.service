[Unit]
Description=Citi Bike Backend Service
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/home/ubuntu/CITIBIKE-CAPSTONE-PROJECT/backend
ExecStart=/home/ubuntu/CITIBIKE-CAPSTONE-PROJECT/backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5
Environment="PATH=/home/ubuntu/CITIBIKE-CAPSTONE-PROJECT/backend/venv/bin:/usr/bin"

[Install]
WantedBy=multi-user.target
