[Unit]
Description=CitiBike FastAPI Backend
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/CITIBIKE-CAPSTONE-PROJECT/backend
Environment="PATH=/home/ubuntu/CITIBIKE-CAPSTONE-PROJECT/backend/venv/bin"
ExecStart=/home/ubuntu/CITIBIKE-CAPSTONE-PROJECT/backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
